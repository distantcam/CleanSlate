<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>

    <ControlTemplate x:Key="MinimizeIcon">
        <Viewbox Stretch="Uniform">
            <Canvas Width="16" Height="16">
                <Path Fill="{TemplateBinding Foreground}" Data="M4,10 H13 V13 H4" />
            </Canvas>
        </Viewbox>
    </ControlTemplate>

    <ControlTemplate x:Key="MaximizeIcon">
        <Viewbox Stretch="Uniform">
            <Canvas Width="16" Height="16">
                <Path Fill="{TemplateBinding Foreground}" Data="M4,5 V14 H13 V5 M5,8 V13 H12 V8" />
            </Canvas>
        </Viewbox>
    </ControlTemplate>

    <ControlTemplate x:Key="MaximizedIcon">
        <Viewbox Stretch="Uniform">
            <Canvas Width="16" Height="16">
                <Path Fill="{TemplateBinding Foreground}" Data="M3,7 V14 H10 V7 M4,9 V13 H9 V9 M6,4 H13 V11 H10 V7 H6 M7,6 H12 V10 H10 V7 H7" />
            </Canvas>
        </Viewbox>
    </ControlTemplate>

    <ControlTemplate x:Key="CloseIcon">
        <Viewbox Stretch="Uniform">
            <Canvas Width="16" Height="16">
                <Path Fill="{TemplateBinding Foreground}" Data="M3,5 5,5 8,8 11,5 13,5 9,9 13,13 11,13 8,10 5,13 3,13 7,9" />
            </Canvas>
        </Viewbox>
    </ControlTemplate>

</ResourceDictionary>