             xmlns:local="clr-namespace:CleanSlate.Sample"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/CleanSlate;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/CleanSlate;component/Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>